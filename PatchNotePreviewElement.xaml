<UserControl x:Class="PC_Creator_Mod_Launcher.PatchNotePreviewElement"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PC_Creator_Mod_Launcher"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             mc:Ignorable="d"
             d:DesignWidth="236"
             FontFamily="Segoe UI"
             FontWeight="SemiBold"
             BorderThickness="2"
             BorderBrush="DimGray"
             Padding="6 6 6 6"
             Background="White">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>

            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock x:Name="PatchVersionTextBlock" Grid.Row="0" Grid.Column="0" FontSize="14" HorizontalAlignment="Center" VerticalAlignment="Center">v1.0.0</TextBlock>

        <ui:Button x:Name="PatchDetailsButton" Grid.Row="0" Grid.Column="1" FontSize="14" VerticalAlignment="Center" HorizontalAlignment="Center" ui:Style="{StaticResource FluentUIBaseButtonTheme}" Padding="20 10 20 10">Details</ui:Button>
    </Grid>
</UserControl>
